{
  "name": "agent-fork-join",
  "version": "0.5.0",
  "description": "Multi-agent git workflow orchestrator with isolated worktrees, FIFO merge queue, and automated PR lifecycle management.",
  "author": {
    "name": "epiphytic",
    "email": "liamhelmer@example.com"
  },
  "repository": "https://github.com/epiphytic/agent-fork-join",
  "license": "MIT",
  "keywords": [
    "git",
    "multi-agent",
    "worktree",
    "merge-queue",
    "fork-join",
    "parallel",
    "orchestration",
    "pr-automation",
    "pr-workflow"
  ],
  "commands": "./commands/",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-prompt-submit.sh",
            "async": true
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-tool-complete.sh",
            "async": true
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/on-session-complete.sh",
            "async": true
          }
        ]
      }
    ]
  }
}
